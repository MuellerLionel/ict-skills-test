<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ict.skills.ictskillslogin.LoginController">
   <top>
      <Label contentDisplay="CENTER" text="Login" BorderPane.alignment="CENTER">
         <font>
            <Font size="28.0" />
         </font>
         <padding>
            <Insets top="20.0" />
         </padding>
      </Label>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="loginUsernameField" promptText="Username...">
               <VBox.margin>
                  <Insets bottom="30.0" left="160.0" right="160.0" top="70.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="loginPasswordField" promptText="Password...">
               <VBox.margin>
                  <Insets left="160.0" right="160.0" />
               </VBox.margin>
            </PasswordField>
            <Label fx:id="loginErrorLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="283.0" textFill="RED">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="loginSubmitButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onLoginSubmit" text="Submit">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <Hyperlink fx:id="loginCancelLink" onAction="#onLoginCancel" text="cancel" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Hyperlink>
   </bottom>
</BorderPane>
